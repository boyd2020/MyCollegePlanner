<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_card_margin"
    app:cardCornerRadius="@dimen/default_card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding"
            android:layout_gravity="center"
            android:text="@string/course_info"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorAccent"
            android:textAppearance="?android:textAppearanceLarge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding">

            <ImageView
                android:layout_width="@dimen/default_image_size"
                android:layout_height="@dimen/default_image_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_person_white_48dp"
                android:tint="@color/colorAccent"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/professor"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:textAppearanceMedium"/>


                <TextView
                    android:id="@+id/profName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_top"
                    android:text=""
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceMedium"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding">

            <ImageView
                android:layout_width="@dimen/default_image_size"
                android:layout_height="@dimen/default_image_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_location_on_black_48dp"
                android:tint="@color/colorAccent"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_location"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:textAppearanceMedium"/>


                <TextView
                    android:id="@+id/courseLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_top"
                    android:text=""
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceMedium"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding">

            <ImageView
                android:layout_width="@dimen/default_image_size"
                android:layout_height="@dimen/default_image_size"
                android:layout_gravity="center"
                android:src="@drawable/baseline_calendar_today_black_48dp"
                android:tint="@color/colorAccent"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_days"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:textAppearanceMedium"/>


                <TextView
                    android:id="@+id/courseDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_top"
                    android:text=""
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceMedium"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding">

            <ImageView
                android:id="@+id/itemImageView"
                android:layout_width="@dimen/default_image_size"
                android:layout_height="@dimen/default_image_size"
                android:layout_gravity="center"
                android:src="@drawable/baseline_schedule_black_48dp"
                android:tint="@color/colorAccent"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/default_margin_left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:textAppearanceMedium"/>


                <TextView
                    android:id="@+id/courseStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_top"
                    android:text=""
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceMedium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/default_margin_left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EndTime"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:textAppearanceMedium"/>


                <TextView
                    android:id="@+id/courseEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin_top"
                    android:text=""
                    android:fontFamily="sans-serif-medium"
                    android:textAppearance="?android:textAppearanceMedium"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.design.card.MaterialCardView>