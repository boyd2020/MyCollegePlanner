<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding"
    android:background="@drawable/card_selector">


    <ImageView
        android:id="@+id/assignImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_assignment_black_48dp"
        android:tint="@color/colorAccent"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/default_margin_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/assignCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor Name"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorAccent"
            android:textAppearance="?android:textAppearanceMedium"/>


        <TextView
            android:id="@+id/assignName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_top"
            android:text="John Smith"
            android:textColor="@drawable/card_text_selector"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="?android:textAppearanceMedium"/>

    </LinearLayout>


    <TextView
        android:id="@+id/assignDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_top"
        android:layout_gravity="center_vertical"
        android:text="Jun 30"
        android:textColor="@drawable/card_text_selector"
        android:fontFamily="sans-serif-medium"
        android:textAppearance="?android:textAppearanceMedium"/>

</LinearLayout>