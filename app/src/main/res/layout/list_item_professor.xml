<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding"
    android:background="@drawable/card_selector">


        <ImageView
            android:id="@+id/contactImage"
            android:layout_width="@dimen/contact_image_size"
            android:layout_height="@dimen/contact_image_size"
            android:src="@drawable/ic_person_white_48dp"
            android:tint="@color/colorPrimary"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_margin_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="James Rhodes"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/colorPrimary"
                android:textAppearance="?android:textAppearanceMedium"/>


            <TextView
                android:id="@+id/contactEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_top"
                android:text="james.rhodes@fscj.edu"
                android:textColor="@drawable/card_text_selector"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="?android:textAppearanceMedium"/>

        </LinearLayout>

</LinearLayout>